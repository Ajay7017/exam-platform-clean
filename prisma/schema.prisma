//schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION MODELS
// ============================================
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  phone         String?   @unique  // ✅ NEW: Phone number field
  phoneVerified Boolean   @default(false)  // ✅ NEW: For future OTP verification
  role          String    @default("student") // "student" | "admin"
  isBlocked     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  lastLoginAt   DateTime?
  
  accounts    Account[]
  sessions    Session[]
  attempts    Attempt[]
  purchases   Purchase[]
  leaderboard LeaderboardEntry[]
  
  @@index([email])
  @@index([phone])  // ✅ NEW: Index for faster phone lookups
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// CONTENT MODELS
// ============================================
model Subject {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  
  topics        Topic[]
  exams         Exam[]
  subscriptions Subscription[]
  
  @@index([slug])
  @@index([isActive])
}

model Topic {
  id        String   @id @default(cuid())
  name      String
  slug      String
  subjectId String
  subject   Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  isActive  Boolean  @default(true)
  sequence  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  questions Question[]
  
  @@unique([subjectId, name])
  @@index([subjectId, isActive])
}

enum Difficulty {
  easy
  medium
  hard
}

model Question {
  id            String     @id @default(cuid())
  statement     String     @db.Text
  imageUrl      String?
  topicId       String
  topic         Topic      @relation(fields: [topicId], references: [id], onDelete: Cascade)
  marks         Int        @default(1)
  negativeMarks Float      @default(0.25)
  explanation   String?    @db.Text
  difficulty    Difficulty @default(medium)
  isActive      Boolean    @default(true)
  version       Int        @default(1)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  options       Option[]
  examQuestions ExamQuestion[]
  
  @@index([topicId, isActive])
  @@index([difficulty])
}

model Option {
  id         String   @id @default(cuid())
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  text       String   @db.Text
  imageUrl   String?
  isCorrect  Boolean  @default(false)
  optionKey  String   // "A", "B", "C", "D"
  sequence   Int
  createdAt  DateTime @default(now())
  
  @@index([questionId])
}

// ============================================
// EXAM MODELS
// ============================================
model Exam {
  id              String     @id @default(cuid())
  title           String
  slug            String     @unique
  description     String?    @db.Text
  thumbnail       String?
  subjectId       String?
  subject         Subject?   @relation(fields: [subjectId], references: [id])
  isMultiSubject  Boolean    @default(false)  // NEW: Add this line
  durationMin     Int
  totalMarks      Int
  passingMarks    Int?
  price           Int        // In paise (₹100 = 10000 paise)
  isPaid          Boolean    @default(true)
  isFree          Boolean    @default(false)
  isPublished     Boolean    @default(false)
  instructions    String?    @db.Text
  allowReview     Boolean    @default(true)
  randomizeOrder  Boolean    @default(true)
  difficulty      Difficulty @default(medium)
  rating          Float      @default(0)
  totalAttempts   Int        @default(0)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  
  questions         ExamQuestion[]
  attempts          Attempt[]
  purchases         Purchase[]
  leaderboard       LeaderboardEntry[]
  subscriptionExams SubscriptionExam[]
  bundleExams       BundleExam[]
  
  @@index([slug])
  @@index([isPublished])
  @@index([subjectId])
}

model ExamQuestion {
  id         String   @id @default(cuid())
  examId     String
  exam       Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  questionId String
  question   Question @relation(fields: [questionId], references: [id])
  sequence   Int
  createdAt  DateTime @default(now())
  
  @@unique([examId, questionId])
  @@index([examId])
  @@index([questionId])
}

// ============================================
// SUBSCRIPTION & BUNDLE MODELS
// ============================================
model Subscription {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  description  String?  @db.Text
  subjectId    String?
  subject      Subject? @relation(fields: [subjectId], references: [id])
  durationDays Int      // 30, 180, 365
  price        Int
  discount     Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  
  exams     SubscriptionExam[]
  purchases Purchase[]
}

model SubscriptionExam {
  id             String       @id @default(cuid())
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  examId         String
  exam           Exam         @relation(fields: [examId], references: [id], onDelete: Cascade)
  
  @@unique([subscriptionId, examId])
}

model Bundle {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  description  String?  @db.Text
  price        Int
  discount     Int      @default(0)
  isActive     Boolean  @default(true)
  validityDays Int      @default(365)
  createdAt    DateTime @default(now())
  
  exams     BundleExam[]
  purchases Purchase[]
}

model BundleExam {
  id       String @id @default(cuid())
  bundleId String
  bundle   Bundle @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  examId   String
  exam     Exam   @relation(fields: [examId], references: [id], onDelete: Cascade)
  
  @@unique([bundleId, examId])
}

// ============================================
// PURCHASE & PAYMENT MODELS
// ============================================
model Purchase {
  id             String        @id @default(cuid())
  userId         String
  user           User          @relation(fields: [userId], references: [id])
  examId         String?
  exam           Exam?         @relation(fields: [examId], references: [id])
  subscriptionId String?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id])
  bundleId       String?
  bundle         Bundle?       @relation(fields: [bundleId], references: [id])
  type           String        // "single_exam" | "subscription" | "bundle"
  price          Int
  status         String        @default("pending") // pending | active | expired | refunded
  validFrom      DateTime      @default(now())
  validUntil     DateTime?
  purchasedAt    DateTime      @default(now())
  refundedAt     DateTime?
  
  payment Payment?
  
  @@index([userId, status])
  @@index([examId, userId])
}

model Payment {
  id                 String    @id @default(cuid())
  purchaseId         String    @unique
  purchase           Purchase  @relation(fields: [purchaseId], references: [id])
  razorpayOrderId    String?   @unique
  razorpayPaymentId  String?   @unique
  razorpaySignature  String?
  amount             Int
  currency           String    @default("INR")
  status             String    @default("created") // created | paid | failed | refunded
  method             String?   // card | upi | netbanking | wallet
  failureReason      String?
  createdAt          DateTime  @default(now())
  paidAt             DateTime?
  
  @@index([razorpayOrderId])
  @@index([status])
}

// ============================================
// ATTEMPT & LEADERBOARD MODELS
// ============================================
model Attempt {
  id             String    @id @default(cuid())
  userId         String
  user           User      @relation(fields: [userId], references: [id])
  examId         String
  exam           Exam      @relation(fields: [examId], references: [id])
  
  // Timing fields
  startedAt      DateTime  @default(now())
  submittedAt    DateTime?
  expiresAt      DateTime
  timeSpentSec   Int       @default(0)
  
  // Question tracking
  totalQuestions Int
  
  // Answer storage
  answers        Json      @default("{}")
  
  // Scoring fields
  correctAnswers Int       @default(0)
  wrongAnswers   Int       @default(0)
  unattempted    Int       @default(0)
  score          Float?
  percentage     Float?
  rank           Int?       // ✅ ADD THIS
  percentile     Float?     // ✅ ADD THIS
  
  // Status tracking
  status         String    @default("in_progress")
  
  // Anti-cheating
  ipAddress      String?
  tabSwitchCount Int       @default(0)
  suspiciousFlags Json?    @default("[]")
  
  // Metadata
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  leaderboardEntry LeaderboardEntry?
  
  @@index([userId, examId])
  @@index([status])
  @@index([expiresAt])
}

model LeaderboardEntry {
  id          String   @id @default(cuid())
  examId      String
  exam        Exam     @relation(fields: [examId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  attemptId   String   @unique
  attempt     Attempt  @relation(fields: [attemptId], references: [id])
  score       Float
  percentage  Float
  rank        Int      // ✅ REMOVE the '?' to make it required
  timeTaken   Int      // seconds
  submittedAt DateTime
  
  @@unique([examId, userId])
  @@index([examId, rank])  // ✅ CHANGE from [examId, score, timeTaken]
  @@index([userId])        // ✅ ADD THIS for user-specific queries
}

// ============================================
// ADMIN MODELS
// ============================================
model ImportJob {
  id             String    @id @default(cuid())
  adminId        String
  fileName       String
  subjectId      String
  topicId        String
  totalQuestions Int
  successCount   Int       @default(0)
  failedCount    Int       @default(0)
  status         String    @default("queued") // queued | processing | completed | failed
  errors         Json?
  previewData    Json?
  startedAt      DateTime  @default(now())
  completedAt    DateTime?
  
  @@index([status])
}

model EmailLog {
  id         String    @id @default(cuid())
  userId     String?
  email      String
  type       String    // "welcome" | "purchase_confirmation" | "result_summary"
  subject    String
  status     String    @default("pending") // pending | sent | failed
  provider   String    @default("sendgrid")
  providerId String?
  error      String?
  sentAt     DateTime?
  createdAt  DateTime  @default(now())
  
  @@index([status])
  @@index([type])
}